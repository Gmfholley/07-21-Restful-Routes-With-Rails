<% if @user.id == session[:id] %>
  <h3>Your posts!</h3>
<% else %>
  <h3><%= @user.email %>'s Posts</h3>
<% end %>

<ul><% @posts.each do |story| %>
  <li><%= story.name %>  <% if @user.id == session[:id] %> <a href="/delete_story/<%= story.id%>">Delete</a>  <a href="/edit_story/<%= story.id%>">Edit</a> <% end %></li>
<% end %></ul>

<% if @user.id == session[:id] %>
  <a href="/new_post">Add a new story?</a>
<% end %>